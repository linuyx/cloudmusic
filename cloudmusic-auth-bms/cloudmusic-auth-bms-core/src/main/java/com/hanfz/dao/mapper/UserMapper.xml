<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanfz.dao.mapper.UserMapper">

    <!--根据用户名判断账户是否存在-->
    <select id="existUser" resultType="Integer">
        select 1
        from user
        where username=#{username}
    </select>

    <!--根据用户名查询账号信息-->
    <select id="getUserByUsername" resultType="com.hanfz.pojo.entity.UserEntity">
        select id,password,salt
        from user
        where username=#{username}
            and is_deleted=0
    </select>

    <!--新增账号-->
    <insert id="insertUser">
        insert into user(id,username,password,salt)
        values(#{userId},#{username},#{password},#{salt})
    </insert>
</mapper>
